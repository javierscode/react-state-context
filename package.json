{
  "name": "react-selective-context-monorepo",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "playgrounds/*"
  ],
  "scripts": {
    "build": "npm -w react-selective-context run build",
    "test": "npm -w react-selective-context run test",
    "test:watch": "npm -w react-selective-context run test:watch",
    "test:coverage": "npm -w react-selective-context run test:coverage",
    "format": "prettier --write .",
    "dev:docs": "npm -w docs run dev",
    "dev:vite": "npm -w vite run dev",
    "dev:next-js": "npm -w next-js run dev"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "prettier": "3.7.4",
    "prettier-plugin-classnames": "0.8.6"
  }
}
