    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "happy-dom": "^15.11.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0 ",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
